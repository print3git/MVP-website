{
  "name": "mvp-website",
  "version": "1.0.0",
  "description": "This repository contains the early MVP code for print2's website and backend.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "lhci": "lhci autorun",
    "prepare": "husky install && tsc -p scripts/tsconfig.json",
    "format": "prettier --write \"**/*.{js,jsx,json,md,html}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md,html}\"",
    "lint": "npm run check-conflicts && eslint . --max-warnings=0 && npm run lint --prefix backend",
    "lint:fix": "eslint . --fix",
    "check-conflicts": "! grep -R --include=*.js --include=*.jsx --include=*.ts --include=*.tsx '^(<{7}|={7}|>{7})' .",
    "test": "npm test --prefix backend",
    "coverage": "npm run coverage --prefix backend",
    "typecheck": "tsc --noEmit",
    "i18n:lint": "node scripts/i18n-lint.js",
    "ci": "npm run format && npm run lint && npm run typecheck && npm run i18n:lint && npm run test:ci",
    "test:ci": "cross-env JEST_CI=true npm run test-ci --prefix backend",
    "test:update-threshold": "node scripts/update-coverage-threshold.js",
    "test:stability": "node scripts/test-stability.js",
    "deps:check": "npx -y lockfile-diff HEAD package-lock.json && npx -y lockfile-diff HEAD backend/package-lock.json && npx -y lockfile-diff HEAD backend/hunyuan_server/package-lock.json",
    "deps:dedupe": "pnpm dedupe",
    "deps:dedupe-check": "pnpm dedupe --check",
    "bundle:size": "size-limit",
    "e2e": "playwright test",
    "visual-test": "percy exec -- npm run e2e",
    "test:a11y": "playwright install chromium --with-deps && playwright test e2e/a11y.test.js",
    "netlify:deploy": "scripts/netlify-preflight.sh && netlify deploy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@axe-core/playwright": "^4.10.2",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.2.1",
    "@eslint-community/eslint-utils": "^4.7.0",
    "@eslint/js": "^9.29.0",
    "@lhci/cli": "^0.15.0",
    "@octokit/action": "^6",
    "@percy/cli": "^1.31.0",
    "@percy/playwright": "^1.0.8",
    "@playwright/test": "^1.53.1",
    "@size-limit/file": "^11.2.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-jsdoc": "^51.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "i18next-parser": "^9.3.0",
    "lint-staged": "^16.1.2",
    "lockfile-diff": "^0.1.0",
    "pnpm": "^10.5.2",
    "prettier": "^3.5.3",
    "size-limit": "^11.2.0",
    "tsconfig-strictest": "^1.0.0-beta.1",
    "typescript": "^5.8.3",
    "tslib": "^2.8.1",
    "wait-on": "^8.0.3"
  },
  "lint-staged": {
    "*.{js,jsx,json,md,html}": "npm run format"
  }
}
